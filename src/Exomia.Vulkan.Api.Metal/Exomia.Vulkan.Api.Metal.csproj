        <PackageTags>$(PackageTags) metal</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference
            Include="..\..\analyzer\Exomia.Vulkan.Api.Metal.SourceGenerator\Exomia.Vulkan.Api.Metal.SourceGenerator.csproj"
            OutputItemType="Analyzer"
            PrivateAssets="all"
            ReferenceOutputAssembly="false" />
